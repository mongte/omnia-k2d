{
  "permissions": {
    "allow": [
      "Bash(npm run lint)",
      "Bash(npm run test:*)",
      "Read(~/.zshrc)"
    ],
    "deny": [
      "Bash(curl:*)",
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)"
    ],
    "defaultMode": "plan"
  },
  "env": {
    "CLAUDE_CODE_ENABLE_TELEMETRY": "1",
    "OTEL_METRICS_EXPORTER": "otlp"
  },
  "enabledMcpjsonServers": [
    "typescript-sdk",
    "github",
    "puppeteer",
    "slack",
    "filesystem",
    "memory-bank",
    "sequential-thinking",
    "brave-search",
    "google-maps",
    "deep-graph",
    "memory"
  ],
  "outputStyle": "Explanatory"
}
