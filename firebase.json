{
  "hosting": [
    {
      "target": "sourcing-box",
      "source": "apps/sourcing-box",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**",
        "**/.nx/**"
      ],
      "frameworksBackend": {
        "region": "asia-northeast1"
      }
    },
    {
      "target": "my-daily",
      "public": "apps/my-daily/.next",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ],
      "headers": [
        {
          "source": "/_next/static/**",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "public, max-age=31536000, immutable"
            }
          ]
        }
      ]
    },
    {
      "target": "lookahead",
      "public": "apps/lookahead/.next",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ],
      "headers": [
        {
          "source": "/_next/static/**",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "public, max-age=31536000, immutable"
            }
          ]
        }
      ]
    }
  ]
}
